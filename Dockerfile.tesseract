# ============================================
# Tesseract Dockerfile - Ultra-minimal approach
# ============================================
FROM public.ecr.aws/lambda/python:3.10

# Set environment variables
ENV TESSDATA_PREFIX="/usr/share/tesseract-ocr" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install Tesseract and dependencies
RUN yum update -y && \
    yum install -y \
        tesseract \
        tesseract-langpack-eng \
        libtesseract-dev \
        libleptonica-dev \
    && yum clean all \
    && rm -rf /var/cache/yum

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
        pytesseract \
    && pip cache purge \
    && rm -rf /root/.cache/pip

# Create a simple test script
RUN printf 'import sys\nimport pytesseract\nfrom PIL import Image\n\ndef test_tesseract():\n    try:\n        # Create a simple test image\n        img = Image.new("RGB", (100, 30), color="white")\n        result = pytesseract.image_to_string(img)\n        print("âœ… Tesseract working correctly")\n        return True\n    except Exception as e:\n        print(f"âŒ Tesseract test failed: {e}")\n        return False\n\nif __name__ == "__main__":\n    success = test_tesseract()\n    sys.exit(0 if success else 1)\n' > /var/task/test_tesseract.py

# Run test
RUN python /var/task/test_tesseract.py

# Set default command
CMD ["python", "/var/task/test_tesseract.py"]