# ============================================
# Tesseract Dockerfile - Minimal Ubuntu approach
# ============================================
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    TESSDATA_PREFIX="/usr/share/tesseract-ocr" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install Python and Tesseract dependencies
RUN apt-get update && \
    apt-get install -y \
        python3 \
        python3-pip \
        tesseract-ocr \
        tesseract-ocr-eng \
        libtesseract-dev \
        libleptonica-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip3 install --no-cache-dir --upgrade pip && \
    pip3 install --no-cache-dir \
        pytesseract \
    && pip3 cache purge \
    && rm -rf /root/.cache/pip

# Create a simple test script
RUN echo 'import sys' > /var/task/test_tesseract.py && \
    echo 'import pytesseract' >> /var/task/test_tesseract.py && \
    echo 'from PIL import Image' >> /var/task/test_tesseract.py && \
    echo '' >> /var/task/test_tesseract.py && \
    echo 'def test_tesseract():' >> /var/task/test_tesseract.py && \
    echo '    try:' >> /var/task/test_tesseract.py && \
    echo '        img = Image.new("RGB", (100, 30), color="white")' >> /var/task/test_tesseract.py && \
    echo '        result = pytesseract.image_to_string(img)' >> /var/task/test_tesseract.py && \
    echo '        print("✅ Tesseract working correctly")' >> /var/task/test_tesseract.py && \
    echo '        return True' >> /var/task/test_tesseract.py && \
    echo '    except Exception as e:' >> /var/task/test_tesseract.py && \
    echo '        print(f"❌ Tesseract test failed: {e}")' >> /var/task/test_tesseract.py && \
    echo '        return False' >> /var/task/test_tesseract.py && \
    echo '' >> /var/task/test_tesseract.py && \
    echo 'if __name__ == "__main__":' >> /var/task/test_tesseract.py && \
    echo '    success = test_tesseract()' >> /var/task/test_tesseract.py && \
    echo '    sys.exit(0 if success else 1)' >> /var/task/test_tesseract.py

# Run test
RUN python3 /var/task/test_tesseract.py

# Set default command
CMD ["python3", "/var/task/test_tesseract.py"]