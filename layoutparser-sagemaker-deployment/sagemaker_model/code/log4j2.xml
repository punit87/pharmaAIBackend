<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="ts_log" fileName="/tmp/ts.log" filePattern="/tmp/ts.%d{dd-MMM}.log.gz">
            <PatternLayout pattern="%d{ISO8601} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <RollingFile name="access_log" fileName="/tmp/access.log" filePattern="/tmp/access.%d{dd-MMM}.log.gz">
            <PatternLayout pattern="%d{ISO8601} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <RollingFile name="ts_metrics" fileName="/tmp/ts_metrics.log" filePattern="/tmp/ts_metrics.%d{dd-MMM}.log.gz">
            <PatternLayout pattern="%d{ISO8601} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <RollingFile name="model_log" fileName="/tmp/model.log" filePattern="/tmp/model.%d{dd-MMM}.log.gz">
            <PatternLayout pattern="%d{ISO8601} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <RollingFile name="model_metrics" fileName="/tmp/model_metrics.log" filePattern="/tmp/model_metrics.%d{dd-MMM}.log.gz">
            <PatternLayout pattern="%d{ISO8601} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ts_log"/>
        </Root>
        <Logger name="org.pytorch.serve" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ts_log"/>
        </Logger>
        <Logger name="sagemaker_pytorch_serving_container" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ts_log"/>
        </Logger>
        <Logger name="ACCESS_LOG" level="info" additivity="false">
            <AppenderRef ref="access_log"/>
        </Logger>
        <Logger name="TS_METRICS" level="info" additivity="false">
            <AppenderRef ref="ts_metrics"/>
        </Logger>
        <Logger name="MODEL_LOG" level="info" additivity="false">
            <AppenderRef ref="model_log"/>
        </Logger>
        <Logger name="MODEL_METRICS" level="info" additivity="false">
            <AppenderRef ref="model_metrics"/>
        </Logger>
    </Loggers>
</Configuration>